@model E_ticaret_Sitesi.Models.Product

<h2>Ürün Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductId" />
    <input asp-for="Name" class="form-control mb-2" />
    <input asp-for="Description" class="form-control mb-2" />
    <input asp-for="Price" class="form-control mb-2" />
    <input asp-for="Stock" class="form-control mb-2" />
    <input asp-for="ImageUrl" class="form-control mb-2" />

    <select asp-for="CategoryId" class="form-control mb-3">
        <option value="">Kategori Seç</option>
        @foreach (var cat in ViewBag.Categories)
        {
            <option value="@cat.CategoryId" selected="@(Model.CategoryId == cat.CategoryId)">
                @cat.Name
            </option>
        }
    </select>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
