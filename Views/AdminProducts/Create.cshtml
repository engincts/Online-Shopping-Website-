@model E_ticaret_Sitesi.Models.Product

<h2>Yeni Ürün Ekle</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Ürün Adı</label>
        <input asp-for="Name" placeholder="Ürün Adı" class="form-control mb-2" />
    </div>

    <div class="form-group">
        <label for="Description">Açıklama</label>
        <input asp-for="Description" placeholder="Açıklama" class="form-control mb-2" />
    </div>

    <div class="form-group">
        <label for="Price">Fiyat</label>
        <input asp-for="Price" placeholder="Fiyat" class="form-control mb-2" type="number" step="0.01" min="0" />
    </div>

    <div class="form-group">
        <label for="Stock">Stok</label>
        <input asp-for="Stock" placeholder="Stok" class="form-control mb-2" />
    </div>

    <!-- Kategori Seçimi -->
    <div class="form-group">
        <label for="CategoryId">Kategori</label>
        <select asp-for="CategoryId" class="form-control mb-3">
            <option value="">Kategori Seç</option>
            @foreach (var cat in ViewBag.Categories)
            {
                <option value="@cat.CategoryId">@cat.Name</option>
            }
        </select>
    </div>

    <!-- Resim Yükleme -->
    <div class="form-group">
        <label for="ImageFile">Resim Yükle (isteğe bağlı)</label>
        <input type="file" name="imageFile" class="form-control mb-3" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
