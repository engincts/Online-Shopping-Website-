@model List<E_ticaret_Sitesi.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-section bg-dark text-white text-center py-5">
    <h1 class="display-4">Hoşgeldiniz! Şimdi Al, Hemen Kullan!</h1>
    <p class="lead">En yeni ürünlerimizi keşfedin, fırsatları kaçırmayın.</p>
    <a href="/Products" class="btn btn-primary btn-lg">Ürünleri Gör</a>
</div>

<!-- Kategoriler -->
<div class="categories-section text-center my-5">
    <h2>Ürün Kategorileri</h2>
    <div class="row">
        @foreach (var category in ViewBag.Categories)
        {
            <div class="col-md-3 mb-3">
                <a href="/Products?categoryId=@category.CategoryId" class="btn btn-outline-primary w-100">@category.Name</a>
            </div>
        }
    </div>
</div>

<!-- Öne Çıkan Ürünler Carousel -->
<div class="featured-products text-center my-5">
    <h2>Öne Çıkan Ürünler</h2>
    <div id="featuredCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row">
                    @foreach (var product in Model.Take(3))
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-lg">
                                <img src="@Url.Content(product.ImageUrl)" class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">@product.Price ₺</p>
                                    <a href="/Products/Details/@product.ProductId" class="btn btn-outline-primary">Detay</a>
                                    <form asp-controller="Wishlist" asp-action="Add" method="post" class="mt-2">
                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                        <button class="btn btn-outline-danger btn-sm" type="submit">
                                            <i class="fas fa-heart"></i> Favorilere Ekle
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="carousel-item">
                <div class="row">
                    @foreach (var product in Model.Skip(3).Take(3))
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-lg">
                                <img src="@Url.Content(product.ImageUrl)" class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">@product.Price ₺</p>
                                    <a href="/Products/Details/@product.ProductId" class="btn btn-outline-primary">Detay</a>
                                    <form asp-controller="Wishlist" asp-action="Add" method="post" class="mt-2">
                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                        <button class="btn btn-outline-danger btn-sm" type="submit">
                                            <i class="fas fa-heart"></i> Favorilere Ekle
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>

